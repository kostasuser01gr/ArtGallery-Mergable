{
  "name": "art-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "assets:generate": "tsx scripts/generate-placeholders.ts && tsx scripts/generate-manifest.ts",
    "assets:manifest": "tsx scripts/generate-manifest.ts",
    "assets:import": "tsx scripts/import-assets.ts",
    "mock:ws": "tsx scripts/mock-realtime-ws.ts",
    "mock:sse": "tsx scripts/mock-realtime-sse.ts",
    "video:preview": "remotion studio video/index.ts",
    "video:render": "remotion render video/index.ts ConstructionSequence out/construction-sequence.mp4 --codec=h264 --fps=30 --width=1920 --height=1080",
    "video:render:4k": "remotion render video/index.ts ConstructionSequence out/construction-sequence-4k.mp4 --codec=h264 --fps=30 --width=3840 --height=2160",
    "setup:local": "./scripts/setup-local.sh",
    "postinstall": "npm run assets:manifest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.3",
    "next": "16.1.6",
    "pngjs": "^7.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@remotion/cli": "^4.0.427",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.1.0",
    "remotion": "^4.0.427",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
